[app:test]
use = egg:remote#proxy
title = Some title
href = http://karl.novareto.de:8088
string_keys = REMOTE_USER
login_method = xmlrpc


[app:novareto]
use = egg:remote#proxy
title = Homepage 
href = http://www.novareto.de
string_keys = REMOTE_USER


[app:extranet]
use = egg:remote#proxy
title = Extranet 
href = http://localhost:8080/app
string_keys = REMOTE_USER


[filter:assets]
use = egg:fanstatic#fanstatic
recompute_hashes = false
versioning = true
bottom = true
minified = true
compile = true
publisher_signature = remotewsgi


[filter:who]
use = egg:repoze.who#config
config_file = %(here)s/who.ini
log_file = stdout
log_level = debug


[composite:hub]
use = egg:remote#remotehub
filter-with = assets
/ = novareto
/extranet = extranet
/test = test


[pipeline:main]
pipeline = assets who hub


[server:main]
use = egg:Paste#http
host = 0.0.0.0
port = 8898
